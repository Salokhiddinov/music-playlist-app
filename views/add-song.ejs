<%- include('include/head.ejs')%>
<%- include('include/_header.ejs')%>

<div class="wrapper">
    <h2 class="heading-h2 white">Add a song</h2>
    
    <form method="POST" id="add_song">
        <a href="/all-songs" class="add-song-a white">&lt&lt All Users</a>
        <div class="form-item">
          <label for="name">Artist</label>
          <input type="hidden" name="id" value="" />
          <input type="text" name="name" placeholder="The Weeknd" />
        </div>
        <div class="form-item">
            <label for="title">Title</label>
            <input type="text" name="email" placeholder="Starboy" />
          </div>
          <div class="form-item">
            <label for="url">Link to Photo</label>
            <input type="url" name="email" placeholder="URL from Google" />
        </div>
        <span class="grey form-comment">Go to Google.com, find image of an artist, right-click and "Copy image address" (Not "Copy link address").</span>
          <div class="form-item">
            <label for="email">Year</label>
            <input type="number" name="date" placeholder="2016" />
          </div>
      </form>
</div>



